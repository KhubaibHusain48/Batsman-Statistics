<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/Heading"
        android:textAlignment="center"
        android:textColor="#E40404"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/SR_heading"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Balls_SR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:hint="@string/Balls_Played"
        android:textColorHint="@color/blue"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Runs_SR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/blue"
        android:hint="@string/Runs_Scored"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/SR_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/white"
        android:text="@string/calculate_sr" />

    <TextView
        android:id="@+id/SR_Shown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/SR_Display"
        android:textColor="@color/purple"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/Avg_Heading"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RunsAvgEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/blue"
        android:hint="@string/Runs_Scored"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/OutCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:hint="@string/Dismissals"
        android:textColorHint="@color/blue"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <Button
        android:id="@+id/AvgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/white"
        android:text="@string/calculate_average" />

    <TextView
        android:id="@+id/Avg_Shown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/Avg_display"
        android:textColor="@color/purple"
        android:textStyle="bold" />

</LinearLayout>
